<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="0"
        android:textSize="25dp"
        android:textAlignment="textEnd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="false"

        />

    <Button
        android:id="@+id/buttonAC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="AC"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buttonDEL"
        app:layout_constraintBottom_toTopOf="@id/button7"
        android:layout_margin="2dp"
        android:onClick="clearText"

        />
    <Button
        android:id="@+id/buttonDEL"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="DEL"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber"
        app:layout_constraintLeft_toRightOf="@id/buttonAC"
        app:layout_constraintRight_toLeftOf="@id/buttonPorciento"
        app:layout_constraintBottom_toTopOf="@id/button8"
        android:layout_margin="2dp"
        android:onClick="DeleteText"
        />
    <Button
        android:id="@+id/buttonPorciento"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="%"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber"
        app:layout_constraintLeft_toRightOf="@id/buttonDEL"
        app:layout_constraintRight_toLeftOf="@id/buttonDivision"
        app:layout_constraintBottom_toTopOf="@id/button9"
        android:layout_margin="2dp"
        />
    <Button
        android:id="@+id/buttonDivision"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="รท"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber"
        app:layout_constraintLeft_toRightOf="@id/buttonPorciento"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonMulti"
        android:layout_margin="2dp"
        />
    <!-- segunda fila -->
    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonAC"
        app:layout_constraintRight_toLeftOf="@id/button8"
        app:layout_constraintBottom_toTopOf="@id/button4"
        android:layout_margin="2dp"
        android:onClick="NumberInput"
        />
    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        app:layout_constraintTop_toBottomOf="@id/buttonDEL"
        app:layout_constraintLeft_toRightOf="@id/button7"
        app:layout_constraintRight_toLeftOf="@id/button9"
        app:layout_constraintBottom_toTopOf="@id/button5"
        android:layout_margin="2dp"
        android:onClick="NumberInput"
        />
    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        app:layout_constraintTop_toBottomOf="@id/buttonPorciento"
        app:layout_constraintLeft_toRightOf="@id/button8"
        app:layout_constraintRight_toLeftOf="@id/buttonMulti"
        app:layout_constraintBottom_toTopOf="@id/button6"
        android:layout_margin="2dp"
        android:onClick="NumberInput"
        />
    <Button
        android:id="@+id/buttonMulti"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="x"
        app:layout_constraintTop_toBottomOf="@id/buttonDivision"
        app:layout_constraintLeft_toRightOf="@id/button9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonSuma"
        android:layout_margin="2dp"
        />
    <!-- Tercera fila -->
    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button5"
        app:layout_constraintBottom_toTopOf="@id/button1"
        android:layout_margin="2dp"
        android:onClick="NumberInput"
        />

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        app:layout_constraintTop_toBottomOf="@id/button8"
        app:layout_constraintLeft_toRightOf="@id/button4"
        app:layout_constraintRight_toLeftOf="@id/button6"
        app:layout_constraintBottom_toTopOf="@id/button2"
        android:layout_margin="2dp"
        android:onClick="NumberInput"
        />
    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        app:layout_constraintTop_toBottomOf="@id/button9"
        app:layout_constraintLeft_toRightOf="@id/button5"
        app:layout_constraintRight_toRightOf="@id/buttonSuma"
        app:layout_constraintBottom_toTopOf="@id/button3"
        android:layout_margin="2dp"
        android:onClick="NumberInput"
        />
    <Button
        android:id="@+id/buttonSuma"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        app:layout_constraintTop_toBottomOf="@id/buttonMulti"
        app:layout_constraintLeft_toRightOf="@id/button6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Resta"
        android:layout_margin="2dp"
        />
    <!--Cuarta fila-->
    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button2"
        app:layout_constraintBottom_toTopOf="@id/button0"
        android:layout_margin="2dp"
        android:onClick="NumberInput"
        />
    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintLeft_toRightOf="@id/button1"
        app:layout_constraintRight_toLeftOf="@id/button3"
        app:layout_constraintBottom_toTopOf="@id/buttonPunto"
        android:layout_margin="2dp"
        android:onClick="NumberInput"
        />
    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintLeft_toRightOf="@id/button2"
        app:layout_constraintRight_toLeftOf="@id/Resta"
        app:layout_constraintBottom_toTopOf="@id/buttonIgual"
        android:layout_margin="2dp"
        android:onClick="NumberInput"
        />
    <Button
        android:id="@+id/Resta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        app:layout_constraintTop_toBottomOf="@id/buttonSuma"
        app:layout_constraintLeft_toRightOf="@id/button3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonIgual"
        android:layout_margin="2dp"
        />
    <!--Cuarta Linea-->
    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buttonPunto"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="2dp"
        android:onClick="NumberInput"
        />
    <Button
        android:id="@+id/buttonPunto"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="."
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintLeft_toRightOf="@id/button0"
        app:layout_constraintRight_toLeftOf="@id/buttonIgual"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="2dp"
        android:onClick="NumberInput"
        />
    <Button
        android:id="@+id/buttonIgual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="="
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintLeft_toRightOf="@id/buttonPunto"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="2dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>